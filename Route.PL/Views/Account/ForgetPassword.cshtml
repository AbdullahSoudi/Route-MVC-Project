@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "Forgot password";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="auth-card">
    <div class="brand">
        <div class="brand-mark"></div>
        <div class="brand-meta">
            <p class="brand-title">YourApp</p>
            <p class="brand-sub">Account recovery</p>
        </div>
    </div>

    <p class="kicker">Recovery</p>
    <h1 class="title">Forgot your password?</h1>
    <p class="subtitle">Enter your email and weâ€™ll send a reset link if it exists in our system.</p>

    <form class="form" asp-controller="Account" asp-action="SendResetPasswordURL" method="post" asp-antiforgery="true" novalidate>
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="field">
            <label asp-for="Email">Email</label>
            <div class="control">
                <svg class="icon" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                    <path d="M4 7.5l8 5 8-5" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/>
                    <path d="M5 18h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/>
                </svg>
                <input asp-for="Email" type="email" inputmode="email" autocomplete="email" placeholder="name@company.com" required />
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <button class="btn" type="submit">Send reset link</button>

        <div class="footer">
            Remembered it? <a asp-action="Login">Back to sign in</a>
        </div>
    </form>
</div>
