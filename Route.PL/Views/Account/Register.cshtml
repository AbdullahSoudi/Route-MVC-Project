@model RegisterViewModel
@{
    ViewData["Title"] = "Create account";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="auth-card">
    <div class="brand">
        <div class="brand-mark"></div>
        <div class="brand-meta">
            <p class="brand-title">YourApp</p>
            <p class="brand-sub">Create a new account</p>
        </div>
    </div>

    <p class="kicker">New here?</p>
    <h1 class="title">Create account</h1>
    <p class="subtitle">Join in less than a minute. Use a real email so you can verify your account.</p>

    <form class="form" asp-controller="Account" asp-action="Register" method="post" asp-antiforgery="true" novalidate>
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="field">
            <label asp-for="Username">Username</label>
            <div class="control">
                <svg class="icon" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                    <path d="M20 21a8 8 0 10-16 0" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/>
                    <path d="M12 12a4 4 0 100-8 4 4 0 000 8z" stroke="currentColor" stroke-width="1.8"/>
                </svg>
                <input asp-for="Username" autocomplete="username" placeholder="yourname" required />
            </div>
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="field">
            <label asp-for="FirstName">First name</label>
            <div class="control">
                <svg class="icon" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                    <path d="M20 21a8 8 0 10-16 0" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/>
                    <path d="M12 12a4 4 0 100-8 4 4 0 000 8z" stroke="currentColor" stroke-width="1.8"/>
                </svg>
                <input asp-for="FirstName" autocomplete="given-name" placeholder="First name" required />
            </div>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="field">
            <label asp-for="LastName">Last name</label>
            <div class="control">
                <svg class="icon" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                    <path d="M20 21a8 8 0 10-16 0" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/>
                    <path d="M12 12a4 4 0 100-8 4 4 0 000 8z" stroke="currentColor" stroke-width="1.8"/>
                </svg>
                <input asp-for="LastName" autocomplete="family-name" placeholder="Last name" required />
            </div>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="field">
            <label asp-for="Email">Email</label>
            <div class="control">
                <svg class="icon" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                    <path d="M4 7.5l8 5 8-5" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/>
                    <path d="M5 18h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/>
                </svg>
                <input asp-for="Email" type="email" inputmode="email" autocomplete="email" placeholder="name@company.com" required />
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="field">
            <label asp-for="Password">Password</label>
            <div class="control">
                <svg class="icon" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                    <path d="M7 10V8a5 5 0 0110 0v2" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/>
                    <path d="M7 10h10a2 2 0 012 2v6a2 2 0 01-2 2H7a2 2 0 01-2-2v-6a2 2 0 012-2z" stroke="currentColor" stroke-width="1.8"/>
                </svg>
                <input asp-for="Password" type="password" autocomplete="new-password" placeholder="Create a strong password" required />
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="field">
            <label asp-for="ConfirmPassword">Confirm password</label>
            <div class="control">
                <svg class="icon" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                    <path d="M7 10V8a5 5 0 0110 0v2" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/>
                    <path d="M7 10h10a2 2 0 012 2v6a2 2 0 01-2 2H7a2 2 0 01-2-2v-6a2 2 0 012-2z" stroke="currentColor" stroke-width="1.8"/>
                </svg>
                <input asp-for="ConfirmPassword" type="password" autocomplete="new-password" placeholder="Repeat password" required />
            </div>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="row">
            <label class="check">
                <input asp-for="IsAgreed" type="checkbox" required />
                <span>I agree to the Terms</span>
            </label>
            <a asp-action="Login">Already have an account?</a>
        </div>

        <button class="btn" type="submit">Create account</button>

        <div class="footer">
            By creating an account, you agree to our Terms &amp; Privacy Policy.
        </div>
    </form>
</div>
