@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset password";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="auth-card">
    <div class="brand">
        <div class="brand-mark"></div>
        <div class="brand-meta">
            <p class="brand-title">YourApp</p>
            <p class="brand-sub">Password reset</p>
        </div>
    </div>

    <p class="kicker">Security</p>
    <h1 class="title">Reset your password</h1>
    <p class="subtitle">Choose a strong password you donâ€™t use elsewhere.</p>

    <form class="form" asp-controller="Account" asp-action="ResetPassword" method="post" asp-antiforgery="true" novalidate>
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="field">
            <label asp-for="NewPassword">New password</label>
            <div class="control">
                <svg class="icon" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                    <path d="M7 10V8a5 5 0 0110 0v2" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/>
                    <path d="M7 10h10a2 2 0 012 2v6a2 2 0 01-2 2H7a2 2 0 01-2-2v-6a2 2 0 012-2z" stroke="currentColor" stroke-width="1.8"/>
                </svg>
                <input asp-for="NewPassword" type="password" autocomplete="new-password" placeholder="Create a strong password" required />
            </div>
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>

        <div class="field">
            <label asp-for="ConfirmNewPassword">Confirm password</label>
            <div class="control">
                <svg class="icon" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                    <path d="M7 10V8a5 5 0 0110 0v2" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/>
                    <path d="M7 10h10a2 2 0 012 2v6a2 2 0 01-2 2H7a2 2 0 01-2-2v-6a2 2 0 012-2z" stroke="currentColor" stroke-width="1.8"/>
                </svg>
                <input asp-for="ConfirmNewPassword" type="password" autocomplete="new-password" placeholder="Repeat password" required />
            </div>
            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
        </div>

        <button class="btn" type="submit">Update password</button>

        <div class="footer">
            <a asp-action="Login">Back to sign in</a>
        </div>
    </form>
</div>
