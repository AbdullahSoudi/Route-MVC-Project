@model LoginViewModel
@{
    ViewData["Title"] = "Sign in";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="auth-card">
    <div class="brand">
        <div class="brand-mark"></div>
        <div class="brand-meta">
            <p class="brand-title">YourApp</p>
            <p class="brand-sub">Secure sign-in</p>
        </div>
    </div>

    <p class="kicker">Account</p>
    <h1 class="title">Sign in</h1>
    <p class="subtitle">Use your email and password to access your account.</p>

    <form class="form" asp-action="Login" method="post" asp-antiforgery="true" novalidate>
        <div asp-validation-summary="All" class="text-danger" role="alert"></div>

        <div class="field">
            <label asp-for="Email">Email</label>
            <div class="control">
                <svg class="icon" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                    <path d="M4 7.5l8 5 8-5" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/>
                    <path d="M5 18h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/>
                </svg>
                <input asp-for="Email" type="email" inputmode="email" autocomplete="email" placeholder="name@company.com" required />
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="field">
            <label asp-for="Password">Password</label>
            <div class="control">
                <svg class="icon" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                    <path d="M7 10V8a5 5 0 0110 0v2" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/>
                    <path d="M7 10h10a2 2 0 012 2v6a2 2 0 01-2 2H7a2 2 0 01-2-2v-6a2 2 0 012-2z" stroke="currentColor" stroke-width="1.8"/>
                </svg>
                <input asp-for="Password" type="password" autocomplete="current-password" placeholder="••••••••" required />
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="row">
            <label class="check">
                <input asp-for="RememberMe" type="checkbox" />
                <span>Keep me signed in</span>
            </label>
            <a asp-action="ForgetPassword">Forgot password?</a>
        </div>

        <button class="btn" type="submit">Sign in</button>

        <div class="footer">
            Don’t have an account? <a asp-action="Register">Create one</a>
        </div>
    </form>
</div>
